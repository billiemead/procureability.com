
# ignore everything in the root except the "wp-content" directory.
/*
!wp-content/
!wp-config/
wp-config/.env
!wp-config.php

# ignore everything in the "wp-content" directory, except:
# mu-plugins, plugins, and themes directories
wp-content/*
!wp-content/mu-plugins/
!wp-content/plugins/
!wp-content/themes/
!wp-content/podcasts/

# ignore all mu-plugins, plugins, and themes
# unless explicitly whitelisted at the end of this file
wp-content/mu-plugins/*
wp-content/plugins/*
wp-content/themes/*
!wp-content/mu-plugins/auto-activation-plugin-manifest.php

# ignore all files starting with . or ~
#.*
~*
!.github/
!.github/workflows/*

# ignore node dependency directories (used by grunt)
node_modules/

# ignore cache files/folders
wp-content/cache/*
wp-content/advanced-cache.php
wp-content/object-cache.php
wp-content/wp-cache-config.php

# ignore OS generated files
ehthumbs.db
Thumbs.db

# ignore Editor files
*.sublime-project
*.sublime-workspace
*.komodoproject

# ignore log files and databases
*.log
*.sql
*.sqlite
wp-content/debug.log
wp-content/mysql.sql

# ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so

# ignore packaged files
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

# -------------------------
# BEGIN Whitelisted Files
# -------------------------

# track these files, if they exist
!.gitignore
!.editorconfig
!.phpcs.xml.dist
!README.md
!CHANGELOG.md
!composer.json
!composer.lock
!.github/workflows/wp-engine.yml
!package.json
!package-lock.json
!webpack.mix.js
!tailwind.config.js

# track favicon files, if they exist
!android-chrome-*.png
!browserconfig.xml
!favicon*.png
!manifest.json
!mstile-*.png
!safari-pinned-tab.svg
!site.webmanifest
!deploy.sh

# track these mu-plugins, plugins, and themes
# add your own entries here
!wp-content/themes/jupiter-child/
/vendor/
