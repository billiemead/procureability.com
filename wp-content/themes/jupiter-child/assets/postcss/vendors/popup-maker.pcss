.pum-theme-download-5-bold-procurement-predictions-for-2030 {
    .pum-container {
        padding: 65px 16px !important;
        background-color: #030C36 !important;
        background-image: url('/wp-content/themes/jupiter-child/assets/img/download-5-bold-procurement-predictions-for-2030.jpg');
        background-position: center center;
        background-size: cover;
    }

    .pum-title {
        color: #FCFCFC !important;
        text-align: center !important;
        font-size: 26px !important;
        font-family: Poppins, sans-serif !important;
        font-weight: 600 !important;
        line-height: 1.25 !important;
        margin-bottom: 20px !important;
    }

    .pum-content {
        & + .pum-close {
            width: 24px !important;
            height: 24px !important;
            top: 8px !important;
            right: 8px !important;
            background-image: url('data:image/png;base64,') !important;
            background-color: transparent !important;
            font-size: 0px !important;
            box-shadow: none !important;
            opacity: 1 !important;
            transition: opacity .75s;

            &:hover {
                opacity: 0.7 !important;
            }
        }
    }
}