.pum-theme-download-5-bold-procurement-predictions-for-2030 {
    .pum-container {
        padding: 120px 16px 16px!important;
        background-color: #030C36 !important;
        background-image: url('/wp-content/themes/jupiter-child/assets/img/bg-talent-whitepaper-popup.webp');
        background-position: center center;
        background-size: cover;
        //min-height: 400px !important;
    }

    .pum-title {
        color: #FCFCFC !important;
        text-align: center !important;
        font-size: 24px !important;
        font-family: Poppins, sans-serif !important;
        font-weight: 500 !important;
        line-height: 1.3 !important;
        margin-bottom: 20px !important;
    }

    .pum-content {
        position: initial;

        .whitepaper-btn {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 4px;
            text-transform: uppercase;
            background: #F19120;
            color: #fff;
            font-size: 16px;
            font-weight: 600;
            letter-spacing: 2px;
            line-height: 1.3;
            position: absolute;
            top: 16px;
            left: 16px;
            text-decoration: none !important;

            &:hover {
                color: #fff !important;
            }
        }

        & + .pum-close {
            width: 24px !important;
            height: 24px !important;
            top: 8px !important;
            right: 8px !important;
            background-image: url(/wp-content/themes/jupiter-child/assets/img/icon/close.png) !important;
            background-color: transparent !important;
            font-size: 0px !important;
            box-shadow: none !important;
            opacity: 1 !important;
            transition: opacity .75s;

            &:hover {
                opacity: 0.7 !important;
            }
        }
    }
}